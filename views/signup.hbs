<div class="sign form-container  signup spacetop">
  <div class="form-header">
    <h1 class="form-title">Enjoy, Drive, Be Passion</h1>
    <p class="form-subtitle">Start your Wondeful Adventure on a different motorbike every ride</p>
  </div>
  <form method="POST" id="form_user" action="/signup">
    <div class="form-item-wrapper flexed-item">
      {{!-- <label for="firstname" class="label-ref label">Last Name: </label> --}}
      <input type="text" name="firstname" class="input-text input" placeholder="Name" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      {{!-- <label for="lastname" class="label-ref label">Last Name: </label> --}}
      <input type="text" name="lastname" class="input-text input" placeholder="Last Name" required>
    </div>
    {{!-- <div class="form-item-wrapper flexed-item">
      <label for="username" class="label-ref label">Username</label>
      <input type="text" name="username" class="input-text input" placeholder="username" required>
    </div> --}}
    <div class="form-item-wrapper flexed-item">
      {{!-- <label for="email" class="label-ref label">Email: </label> --}}
      <input type="email" name="email" class="input-text input" placeholder="Email" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      {{!-- <label for="password" class="label-ref label">Password: </label> --}}
      <input type="password" name="password" class="input-text input" placeholder="Password" required>
    </div>
    <button class="btn btn-primary white">Create Account</button>
  </form>
  {{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  <p class="form-sub-infos">Already have an account ? <a href="/login" class="button-link-form">Sign In</a></p>
</div>