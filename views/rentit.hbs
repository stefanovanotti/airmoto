<form action="/rent/{{product._id}}" method="post" class=" rentit">
  <input type="hidden" name="productid" value={{product._id}}>
  <input type="hidden" name="owner" value={{product.owner}}>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="firstname" class="label-ref label">Name</label> --}}
    <input type="text" name="firstname" class="input-text input" placeholder="Name" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="lastname" class="label-ref label">Last Name</label> --}}
    <input type="text" name="lastname" class="input-text input" placeholder="Last Name" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="email" class="label-ref label">Date Preferred: </label> --}}
    <input type="date" name="date" class="input-text input" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="password" class="label-ref label">Email</label> --}}
    <input type="email" name="email" class="input-text input" placeholder="Email">
  </div>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="password" class="label-ref label">Phone Number</label> --}}
    <input type="number" name="phonenumber" class="input-text input" placeholder="Phone Number">
  </div>
  <div class="form-item-wrapper flexed-item">
    {{!-- <label for="password" class="label-ref label">Send Message....</label> --}}
    <input type="text" name="message" class="input-text input" placeholder="Send Message....">
  </div>
  <button class="btn-success btn add-moto-btn">Send request</button>
</form>