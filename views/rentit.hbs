<form action="/rent/{{product._id}}" method="post">
  <input type="hidden" name="productid" value={{product._id}}>
  <input type="hidden" name="owner" value={{product.owner}}>
  <div class="form-item-wrapper flexed-item">
    <label for="firstname" class="label-ref label">Name</label>
    <input type="text" name="firstname" class="input-text input" placeholder="Albert" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="lastname" class="label-ref label">Last Name</label>
    <input type="text" name="lastname" class="input-text input" placeholder="Biceps" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="email" class="label-ref label">Date Preferred</label>
    <input type="date" name="date" class="input-text input" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="password" class="label-ref label">Email</label>
    <input type="email" name="email" class="input-text input" placeholder="airmoto@abc.com">
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="password" class="label-ref label">Phone Number</label>
    <input type="number" name="phonenumber" class="input-text input" placeholder="+39123456789">
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="password" class="label-ref label">Send Message....</label>
    <input type="text" name="message" class="input-text input"
      placeholder="Hi, I am extremely interested in renting your beautiful motorbike for an amazing trip to the lake...">
  </div>
  <button class="button-primary add-moto-btn">Send request</button>
</form>